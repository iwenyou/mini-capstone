<section>
    <div class="row">

        <div class="col-sm-12 text-center">
            <% if @product && @product.errors.any? %>
            <div id="error_explanation">
                <!-- <h2><%= pluralize(@product.errors.count, "error") %> -->
                    <h2>The product is not saved because:</h2>

                <ul class="list-unstyled">
                    <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
        </div>
        <div class="col-sm-8 col-sm-offset-2">
            <div class="product_single">
                <h1>Create a new nerdy product:</h1>

                <%= form_tag '/products', method: :post do %>

                <div>
                    <%= label_tag :name %>
                    <%= text_field_tag :name %>
                </div>

                <div>
                    <%= label_tag :price %>
                    <%= text_field_tag :price %>
                </div>

                <div>
                    <%= label_tag :description %>
                    <%= text_field_tag :description %>
                </div>

                <div>
                    <%= label_tag :supplier %>
                    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
                </div>

                <div>
                    <%= label_tag :image %>
                    <%= text_field_tag :image %>
                </div>

                <%= submit_tag "Add new product" %>
                <% end %>
            </div>
        </div>
    </div>
</section>
