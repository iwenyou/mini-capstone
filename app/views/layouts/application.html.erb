<!DOCTYPE html>
<html>
    <head>
        <title>MiniCapstone</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag 'application', '<link href="<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">' %>

    </head>

    <body>

        <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %> alert-dismissable" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% end %>

        <!-- navbar start here -->
        <nav class="navbar navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">SHIBA HOUSE</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right nav-pills" role="tablist">
                        <li>
                            <% if is_user? %>
                            <a href="">Welcome,
                                <%= current_user.name %>
                                !</a>
                            <% end %>
                        </li>
                        <li>
                            <a href="/products">Products</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <% if is_admin? %>
                                <li>
                                    <a href="/products/new">Add Product</a>
                                </li>
                                <% end %>

                                <% if !current_user %>
                                <li>
                                    <a href="/signup">Sign up</a>
                                </li>
                                <li>
                                    <a href="/login">Log in</a>
                                </li>
                            <% else %>
                                <li>
                                    <a href="/logout">Log out</a>
                                </li>
                                <% end %>
                            </ul>
                        </li>
                        <li>
                            <a href="/cart/index">Shopping Cart
                                <span class="badge"><%= @cart_count %></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <%= yield %>

        <div class="footer"></div>
    </body>
</html>
