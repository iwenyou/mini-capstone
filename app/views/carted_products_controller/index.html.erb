<div class="container-fuild">
  <div class="row">
    <div class="col-sm-12">
      <h1>Shopping Cart:</h1>
    </div>



    <div class="col-sm-12">
      <ul>
        <% @carted_products.each do |product| %>
        <li>Product Name:  <%= product.product.name %></li>
        <span>Quantity:  <%= product.quantity %></span>
        <%= form_tag "/cart/#{product.id}", method: :delete do %>
        <input type="submit" value="delete product">
        <% end %>
        <% end %>
      </ul>
    </div>



    <div class="col-sm-12">
      <%= form_tag '/order', method: :post do %>
        <div>
          <%= submit_tag "Buy Now" %>
        </div>
      <% end %>
    </div>


  </div>
</div>
